{
  "name": "actionslow-action",
  "version": "1.3.0",
  "description": "Action to trigger Actionslaw workflows",
  "main": "dist/main.js",
  "author": "Ric Wood <ric@grislyeye.com>",
  "scripts": {
    "build": "npm run clean && tsc && npm run pack",
    "clean": "rimraf lib && rimraf database.sqlite3",
    "start": "node --env-file=.env dist/main.js",
    "test": "npm run test:jest && npm run lint",
    "test:jest": "npm run build && jest",
    "test:int": "jest test/integration",
    "test:e2e": "npm run build && jest test/e2e",
    "pack": "esbuild lib/src/main.js --outfile=dist/main.js  --bundle --platform=node --target=node20",
    "lint": "trunk check"
  },
  "devDependencies": {
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@trunkio/launcher": "^1.3.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "activitypub-starter-kit.rg-wood": "^1.0.0-rc4",
    "esbuild": "^0.20.1",
    "html-to-text": "^9.0.5",
    "jest": "^29.7.0",
    "megalodon": "^9.2.3",
    "resolve-cwd": "^3.0.0",
    "rimraf": "^5.0.5",
    "rss-parser": "^3.13.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typed-rest-client": "^1.8.11"
  }
}
